<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsAttendanceApp.Views.AttendancePage"
             Title="Attendance">
  <StackLayout Padding="30" Spacing="20">
    <Label Text="Attendance Tracking" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />
    <Button Text="Start Commute" Clicked="OnStartCommuteClicked" />
    <Button Text="End Commute" Clicked="OnEndCommuteClicked" />
    <Button Text="Start Break" Clicked="OnStartBreakClicked" />
    <Button Text="End Break" Clicked="OnEndBreakClicked" />
    <Button Text="Logout" Clicked="OnLogoutClicked" />
    <Label x:Name="StatusLabel" TextColor="Green" IsVisible="False" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>
