<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GpsAttendanceApp.Views.GpsLoginPage"
             Title="GPS Login">
  <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
    <Label Text="Please allow location access to login with GPS." HorizontalOptions="Center" />
    <Button Text="Login with GPS" Clicked="OnGpsLoginClicked" />
    <Label x:Name="StatusLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />
  </StackLayout>
</ContentPage>
